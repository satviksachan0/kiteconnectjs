/*
 * Configuration template for Live Trading
 * 
 * SECURITY WARNING: Never commit this file with actual credentials!
 * Add .env to your .gitignore file.
 * 
 * Copy this file to .env and fill in your actual credentials.
 */

# Zerodha KiteConnect API Credentials
# Get your API key from https://kite.trade/docs/connect/v3/
KITE_API_KEY=your_api_key_here
KITE_API_SECRET=your_api_secret_here
KITE_ACCESS_TOKEN=your_access_token_here

# Trading Parameters
INITIAL_CAPITAL=15000
RISK_PER_TRADE=10
ENTRY_BUFFER=10
STRIKE_STEP=50
LOT_SIZE=75
FINAL_RR=8
MAX_POSITIONS=3

# Trading Controls
ENABLE_TRAILING=true
DEBUG_MODE=true
DRY_RUN=true

# Market Hours (IST)
MARKET_START_HOUR=9
MARKET_START_MINUTE=15
MARKET_END_HOUR=15
MARKET_END_MINUTE=30

# Risk Management
MAX_DAILY_LOSS=5000
MAX_DAILY_TRADES=10
